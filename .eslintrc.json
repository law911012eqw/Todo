{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prefer-arrow-callback": [ "error", { "allowNamedFunctions": true, "allowUnboundThis": true} ] ,
        "indent": [1, "tab"],
        "max-classes-per-file": ["error", 2],
        "no-confusing-arrow": ["error", {"allowParens": true}],
        "no-plusplus": 0,
        "no-tabs": 0,
        "no-use-before-define": ["error", { "functions": false, "classes": true }]
    }
}
